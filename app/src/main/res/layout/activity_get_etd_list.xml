<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/corner"
    android:backgroundTint="#69E6FA">

    <View
        android:id="@+id/viewETD"
        android:layout_width="402dp"
        android:layout_height="3dp"
        android:layout_marginTop="100dp"
        android:background="#69E6FA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nomETDListTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="120dp"
        android:layout_marginTop="28dp"
        android:text="nom-prenom"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/delete_iv4"
        android:layout_width="25dp"
        android:layout_height="27dp"
        android:layout_marginEnd="24dp"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.526"
        app:srcCompat="@drawable/ic_baseline_delete_24"
        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/idETDListTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="ID_ETD"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/nomETDListTV"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/nomETDListTV"
        app:layout_constraintTop_toBottomOf="@+id/nomETDListTV" />

    <ImageView
        android:id="@+id/ETD_img_v"
        android:layout_width="80dp"
        android:layout_height="75dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/etd_av_male"
        tools:ignore="ImageContrastCheck" />

    <TextView
        android:id="@+id/FilETDListTV"
        android:layout_width="112dp"
        android:layout_height="25dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="60dp"
        android:text="filiere"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/delete_iv4"
        app:layout_constraintTop_toTopOf="@+id/nomETDListTV" />

    <TextView
        android:id="@+id/NivETDListTV"
        android:layout_width="57dp"
        android:layout_height="23dp"
        android:layout_marginBottom="16dp"
        android:text="Niv"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/delete_iv4"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/FilETDListTV" />
</androidx.constraintlayout.widget.ConstraintLayout>