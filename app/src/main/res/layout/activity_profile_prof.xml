<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/profile"
    tools:context=".activities.gestion_comptes.gestion_prof.activity_profile_prof"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="72dp">

    <ImageView
        android:id="@+id/imageViewProf"
        android:layout_width="137dp"
        android:layout_height="120dp"
        android:layout_marginStart="148dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="289dp"
        android:layout_x="125dp"
        android:layout_y="17dp"
        app:srcCompat="@drawable/prf" />


    <TextView
        android:id="@+id/textView24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="418dp"
        android:layout_x="145dp"
        android:layout_y="149dp"
        android:text="Professeur"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/ID_PROF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="418dp"
        android:layout_x="167dp"
        android:layout_y="186dp"
        android:text="ID_PROF"
        android:textSize="18dp" />

    <ImageView
        android:id="@+id/editer_info_prof"
        android:layout_width="50dp"
        android:layout_height="48dp"
        android:layout_marginTop="166dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="54dp"
        android:layout_x="344dp"
        android:layout_y="179dp"
        android:clickable="true"
        app:srcCompat="@drawable/icons8_edit_100px_1"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/editProfSave"
        android:layout_width="199dp"
        android:layout_height="52dp"
        android:layout_marginEnd="104dp"
        android:layout_marginBottom="37dp"
        android:layout_x="103dp"
        android:layout_y="659dp"
        android:background="@color/teal_700"
        android:text="Sauvegarder"
        android:textColor="#FFFFFF"
        tools:ignore="TextContrastCheck" />

    <LinearLayout
        android:layout_width="345dp"
        android:layout_height="355dp"
        android:layout_x="27dp"
        android:layout_y="291dp"
        android:orientation="vertical">


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:outlineAmbientShadowColor="@color/purple_200">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/prenomProf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:gravity="bottom"
                android:hint="prÃ©nom"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:textColorHint="#122FCF"
                android:textSize="18sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/nomProf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:ems="10"
                android:gravity="bottom"
                android:hint="nom"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:textColorHint="#122FCF"
                android:textSize="18sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/emailProf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:ems="10"
                android:gravity="bottom"
                android:hint="email"
                android:inputType="textEmailAddress"
                android:minHeight="48dp"
                android:textColorHint="#122FCF"
                android:textSize="18sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:passwordToggleEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/passwordProf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:gravity="bottom"
                android:hint="mot de passe"
                android:inputType="textPassword"
                android:minHeight="48dp"
                android:textColorHint="#122FCF"
                android:textSize="18sp" />
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

</AbsoluteLayout>